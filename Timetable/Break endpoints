paths:
  /break:
    get:
      tags:
        - B. College Break
      summary: Get all breaks
      responses:
        '200':
          description: List of breaks
    post:
      tags:
        - B. College Break
      summary: Create a new break
      requestBody:
        description: Break object that needs to be created
        required: true
        content:
          application/json:
            schema:
              $ref: '#/components/schemas/Break'
      responses:
        '201':
          description: Break created successfully
  /break/{id}:
    get:
      tags:
        - B. College Break
      summary: Get a break by ID
      parameters:
        - in: path
          name: id
          required: true
          schema:
            type: string
          description: The break ID
      responses:
        '200':
          description: Break found
        '404':
          description: Break not found
    put:
      tags:
        - B. College Break
      summary: Update a break by ID
      parameters:
        - in: path
          name: id
          required: true
          schema:
            type: string
          description: The break ID
      requestBody:
        description: Break object that needs to be updated
        required: true
        content:
          application/json:
            schema:
              $ref: '#/components/schemas/Break'
      responses:
        '200':
          description: Break updated successfully
        '404':
          description: Break not found
    delete:
      tags:
        - B. College Break
      summary: Delete a break by ID
      parameters:
        - in: path
          name: id
          required: true
          schema:
            type: string
          description: The break ID
      responses:
        '204':
          description: Break deleted successfully
        '404':
          description: Break not found
