paths:
  /professorStreamMapping:
    get:
      summary: Get all professor-stream mappings
      responses:
        '200':
          description: List of professor-stream mappings
    post:
      summary: Create a new professor-stream mapping
      requestBody:
        description: ProfessorStreamMapping object that needs to be created
        required: true
        content:
          application/json:
            schema:
              $ref: '#/components/schemas/ProfessorStreamMapping'
      responses:
        '201':
          description: ProfessorStreamMapping created successfully
  /professorStreamMapping/{professorId}/{streamId}:
    get:
      summary: Get a professor-stream mapping by professor ID and stream ID
      parameters:
        - in: path
          name: professorId
          required: true
          schema:
            type: string
          description: The professor ID
        - in: path
          name: streamId
          required: true
          schema:
            type: string
          description: The stream ID
      responses:
        '200':
          description: ProfessorStreamMapping found
        '404':
          description: ProfessorStreamMapping not found
    put:
      summary: Update a professor-stream mapping by professor ID and stream ID
      parameters:
        - in: path
          name: professorId
          required: true
          schema:
            type: string
          description: The professor ID
        - in: path
          name: streamId
          required: true
          schema:
            type: string
          description: The stream ID
      requestBody:
        description: ProfessorStreamMapping object that needs to be updated
        required: true
        content:
          application/json:
            schema:
              $ref: '#/components/schemas/ProfessorStreamMapping'
      responses:
        '200':
          description: ProfessorStreamMapping updated successfully
        '404':
          description: ProfessorStreamMapping not found
    delete:
      summary: Delete a professor-stream mapping by professor ID and stream ID
      parameters:
        - in: path
          name: professorId
          required: true
          schema:
            type: string
          description: The professor ID
        - in: path
          name: streamId
          required: true
          schema:
            type: string
          description: The stream ID
      responses:
        '204':
          description: ProfessorStreamMapping deleted successfully
        '404':
          description: ProfessorStreamMapping not found
