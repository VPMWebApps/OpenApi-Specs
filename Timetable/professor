paths:
  /professor:
    get:
      summary: Get all professors
      responses:
        '200':
          description: List of professors
    post:
      summary: Create a new professor
      requestBody:
        description: Professor object that needs to be created
        required: true
        content:
          application/json:
            schema:
              $ref: '#/components/schemas/Professor'
      responses:
        '201':
          description: Professor created successfully
  /professor/{id}:
    get:
      summary: Get a professor by ID
      parameters:
        - in: path
          name: id
          required: true
          schema:
            type: string
          description: The professor ID
      responses:
        '200':
          description: Professor found
        '404':
          description: Professor not found
    put:
      summary: Update a professor by ID
      parameters:
        - in: path
          name: id
          required: true
          schema:
            type: string
          description: The professor ID
      requestBody:
        description: Professor object that needs to be updated
        required: true
        content:
          application/json:
            schema:
              $ref: '#/components/schemas/Professor'
      responses:
        '200':
          description: Professor updated successfully
        '404':
          description: Professor not found
    delete:
      summary: Delete a professor by ID
      parameters:
        - in: path
          name: id
          required: true
          schema:
            type: string
          description: The professor ID
      responses:
        '204':
          description: Professor deleted successfully
        '404':
          description: Professor not found
