paths:
  /stream:
    get:
      tags:
        - I. College Stream
      summary: Get all streams
      responses:
        '200':
          description: List of streams
    post:
      tags:
        - I. College Stream
      summary: Create a new stream
      requestBody:
        description: Stream object that needs to be created
        required: true
        content:
          application/json:
            schema:
              $ref: '#/components/schemas/Stream'
      responses:
        '201':
          description: Stream created successfully
  /stream/{id}:
    get:
      tags:
        - I. College Stream
      summary: Get a stream by ID
      parameters:
        - in: path
          name: id
          required: true
          schema:
            type: string
          description: The stream ID
      responses:
        '200':
          description: Stream found
        '404':
          description: Stream not found
    put:
      tags:
        - I. College Stream
      summary: Update a stream by ID
      parameters:
        - in: path
          name: id
          required: true
          schema:
            type: string
          description: The stream ID
      requestBody:
        description: Stream object that needs to be updated
        required: true
        content:
          application/json:
            schema:
              $ref: '#/components/schemas/Stream'
      responses:
        '200':
          description: Stream updated successfully
        '404':
          description: Stream not found
    delete:
      tags:
        - I. College Stream
      summary: Delete a stream by ID
      parameters:
        - in: path
          name: id
          required: true
          schema:
            type: string
          description: The stream ID
      responses:
        '204':
          description: Stream deleted successfully
        '404':
          description: Stream not found
